{
  "name": "frost",
  "version": "0.10.0",
  "description": "Get your app online, for the AI coding era.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --cwd apps/app dev",
    "build": "bun --cwd apps/app build",
    "start": "bun --cwd apps/app start",
    "migrate": "bun --cwd apps/app migrate",
    "setup": "bun --cwd apps/app setup",
    "typecheck": "bun --cwd apps/app typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:gen": "bun --cwd apps/app db:gen",
    "test": "bun --cwd apps/app test",
    "dev:marketing": "bun --cwd apps/marketing dev",
    "build:marketing": "bun --cwd apps/marketing build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "typescript": "^5.7.2"
  }
}
